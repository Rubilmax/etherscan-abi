{
  "name": "etherscan-abi",
  "version": "1.0.0",
  "description": "â¬ðŸš€ Fetch the most up-to-date ABI of a verified Smart Contract from Etherscan in seconds!",
  "main": "./lib/index.js",
  "bin": "./lib/cli.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "typecheck": "tsc --noEmit",
    "cli": "ts-node src/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rubilmax/etherscan-abi.git"
  },
  "license": "MIT",
  "author": {
    "name": "Romain (Rubilmax) Milon",
    "email": "rmilon@gmail.com",
    "url": "https://github.com/rubilmax"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "etherscan",
    "abi",
    "fetch",
    "evm",
    "web3",
    "smart contract"
  ],
  "bugs": {
    "url": "https://github.com/rubilmax/etherscan-abi/issues"
  },
  "homepage": "https://github.com/rubilmax/etherscan-abi#readme",
  "dependencies": {
    "@openzeppelin/upgrades-core": "^1.18.0",
    "axios": "^0.27.2",
    "colors": "^1.4.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "dotenv": "^16.0.1",
    "ethers": "^5.7.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "commitizen": "^4.2.5",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
